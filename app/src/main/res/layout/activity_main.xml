<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Linear1"
    android:orientation="vertical"
    tools:context="com.example.tjddl.beginning_exam.MainActivity">

    <Button
        android:onClick="onClick"
        android:id="@+id/button_enroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주문자정보입력" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주문자 이름: 없음" />

    <TextView
        android:id="@+id/textView_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주문자 전화: 없음" />

    <TextView
        android:id="@+id/textView_payway"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결제방법: 없음" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1c40c0"
        android:text="원하는 메뉴를 주문하세요" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_margin="10dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="치킨(15000원)" />

            <EditText
                android:id="@+id/editText_chick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f6d0f7"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

        </TableRow>

        <TableRow
            android:layout_margin="10dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="피자(12000원)" />

            <EditText
                android:id="@+id/editText_pizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="#f6d0f7"
                 />

        </TableRow>

        <TableRow
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="햄버거(5000원)" />

            <EditText
                android:id="@+id/editText_ham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="#f6d0f7"
                 />

        </TableRow>

    </TableLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="할인카드 있음(있으면 15%할인)" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="사은품 : " />

        <RadioGroup
            android:layout_weight="1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton_beverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="음료수" />

            <RadioButton
                android:id="@+id/radioButton_coup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="쿠폰" />
        </RadioGroup>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            app:srcCompat="@drawable/beverage"
            android:layout_weight="6.06" />
    </LinearLayout>

    <Button
        android:onClick="onClick"
        android:id="@+id/button_Order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주문하기" />

    <TextView
        android:id="@+id/textView_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="할인여부 : 없음" />

    <TextView
        android:id="@+id/textView_totalPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결제금액 : 없음" />

</LinearLayout>
